@model ML.Result
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center">Libros</h2>
    <div class="row">
        <div class="col-8">
            <p>
                Para agregar un libro, presiona el botón verde "+".
            </p>
        </div>

        <div class="col-4" style="float:right">
            @Html.ActionLink("+", "Form", "Libro", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
</div>

<hr />

<div class="container">
    <div class="row">

        <table class="table table-hover table-responsive table-striped table-condensed">

            <thead class="table table-dark">

                <tr>
                    <th class="text-center">Editar</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Autor</th>
                    <th class="text-center"># de páginas</th>
                    <th class="text-center">Fecha de publicación</th>
                    <th class="text-center">Editorial</th>
                    <th class="text-center">Edición</th>
                    <th class="text-center">Género</th>
                    <th class="text-center">Eliminar</th>
                </tr>
            </thead>

            <tbody>
                @foreach (ML.Libro libro in Model.Objects)
                {
                    <tr class="text-center">
                        <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Libro", new {IdLibro = libro.IdLibro})"></a></td>
                        <td>@libro.Nombre</td>
                        <td>@libro.Autor.Nombre</td>
                        <td>@libro.NumeroPaginas</td>
                        <td>@libro.FechaPublicacion</td>
                        <td>@libro.Editorial.Nombre</td>
                        <td>@libro.Edicion</td>
                        <td>@libro.Genero.Nombre</td>
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Libro", new {IdLibro = libro.IdLibro})" onclick="return confirm('¿Estás seguro que deseas eliminar el libro?');"></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



